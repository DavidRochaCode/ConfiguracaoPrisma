// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  address Address?
}

model Book {
  id Int @id @default(autoincrement())
  title String
  description String
}

model Address{
  //relation one-to-one
  id Int @id @default(autoincrement())
  country String
  street String
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
}